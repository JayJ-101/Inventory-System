@{
    Layout = "_Layout";

    // use current controller to determine if tab is active
    var current = ViewContext.RouteData.Values["controller"]!.ToString() ?? "";
}

<header class="navbar navbar-dark sticky-top flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">Inventory System</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <input class="form-control form-control w-100 rounded-0 border-0" type="text" placeholder="Search" aria-label="Search">
    <div class="navbar-nav">
        <div class="nav-item text-nowrap">
            <a class="px-3 btn-primary" href="#" >Sign out</a>
        </div>
    </div>
</header>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Dashboard" asp-area="Admin"
                            class="nav-link @Nav.Active("DoashBoard",current)">
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Product" asp-area="Admin"
                            class="nav-link text-white @Nav.Active("Product",current)">
                            <span data-feather="file"></span>
                            Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Category" asp-area="Admin"
                            class="nav-link text-white @Nav.Active("Category",current)">
                            <span data-feather="shopping-cart"></span>
                            Categories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="User" asp-area="Admin"
                            class="nav-link text-white @Nav.Active("User",current)" >
                            <span data-feather="users"></span>
                            Users
                        </a>
                    </li>
                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Admin</span>
                    <a class="link-secondary" href="#" aria-label="Add a new report">
                        <span data-feather="plus-circle"></span>
                    </a>
                </h6>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">
                            <span data-feather="file-text"></span>
                            Settings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">
                            <span data-feather="file-text"></span>
                            Profile
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content Area -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">@ViewData["Title"]</h1>
            </div>

            <!-- Dynamic Content Area -->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
    </div>
</div>

